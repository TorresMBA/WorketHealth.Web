@model Microsoft.AspNetCore.Identity.IdentityRole;
@{
    ViewData["Title"] = "Crear un nuevo ROl";
}


<div class="clase-especial splash-container">
    <div class="card ">
        <div class="card-header" style="text-align:center">
            <h3 class="mb-1">Registro de Roles</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Roles" asp-action="Crear" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>

                <div class="form-group">
                    <input asp-for="Name" class="form-control form-control-lg" id="username" type="text" placeholder="Nombre del nuevo rol">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg btn-block">Crear Rol</button>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}