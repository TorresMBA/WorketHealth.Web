@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Administracion de roles";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Lista de Roles</h2>
                <p class="pageheader-text">.</p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">...</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">...</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Administrador de roles</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Correcto"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Correcto"]
            <a class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></a>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <a class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></a>
        </div>
    }
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->

<div class="form-group row text-right">
    <div class="col col-sm-12 col-lg-12">
            <a asp-controller="Roles" asp-action="Crear" ><button type="submit" class=" btn btn-space btn-success"><i class="far fa-plus-square"></i> Crear un nuevo ROL</button></a>
    </div>
</div>

    <div class="row">
        <!-- ============================================================== -->
        <!-- basic table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Lista de roles</h5>
                <div class="card-body">
                    <div class="table-responsive">

                        @if (Model.Count() > 0)
                        {

                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Rol</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                       <tr>
                                            <td>@Html.DisplayFor(m => item.Id)</td>
                                            <td>@Html.DisplayFor(m => item.Name)</td>
                                            <td>
                                                <a class="btn btn-space btn-primary" style="float:left;" asp-controller="Roles" asp-action="Editar" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <form asp-action="Borrar" asp-route-id="@item.Id">
                                                    <button type="submit" onclick="return confirm('Esta seguro de borrar este registro')" class="btn btn-space btn-danger"><i class="fas fa-trash-alt"></i> Borrar</button>
                                                </form>
                                            </td>
                                       </tr> 
                                    }                              
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Rol</th>
                                        <th>Acciones</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <p>No hay registros</p>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end basic table  -->
        <!-- ============================================================== -->
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>-
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/vendor/datatables/js/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/vendor/datatables/js/data-table.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.0.4/js/dataTables.rowGroup.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.2.7/js/dataTables.select.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.1.5/js/dataTables.fixedHeader.min.js"></script>

}


