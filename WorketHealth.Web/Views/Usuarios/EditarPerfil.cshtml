@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Editar Perfil";
}

<form class="splash-container" asp-controller="Usuarios" asp-action="EditarPerfil" method="post">

    <input type="hidden" asp-for="@Model.Id" />

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="card">
        <div class="card-header">
            <h3 class="mb-1">Editar Perfil de Usuario</h3>
            <p>Por favor ingrese su información de usuario.</p>
        </div>
        <div class="card-body">
            <div class="form-group">
                <input asp-for="UserName" class="form-control form-control-lg" type="text" name="UserName" required="" placeholder="Username" autocomplete="off">

                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group" disabled>
                <input asp-for="@Model.Email" class="form-control form-control-lg" type="email" name="email" required="" placeholder="Email" disabled>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <button class="btn btn-block btn-primary" type="submit">Editar</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
